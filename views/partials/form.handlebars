<form id='contact' method="POST" action='/'>
    <h4 class='card-header text-uppercase font-italic text-center mb-2'>Contact Me</h4>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name='name' placeholder="Enter your name">
    </div>
    <div class="form-group">
        <label for="organName">Organisation</label>
        <input type="text" class="form-control" id="organName" name='organName' placeholder="Enter organisation name">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name='email' placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="phoneNum">Contact Number</label>
        <input type="text" class="form-control" id="phoneNum" name='contactNum' placeholder="Enter phone number">
    </div>
    <div class="form-group">
        <label for="info">Information</label>
        <textarea class="form-control" id="info" row='3' name='info' placeholder="Please tell me anything"></textarea>
    </div>
    <button type="submit" class="btn btn-danger">Submit</button>
</form>